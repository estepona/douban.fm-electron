{
  "name": "douban.fm-electron",
  "version": "0.1.0",
  "description": "A tiny, elegant douban.fm desktop client developed with electron.",
  "author": "Binghuan Zhang <esteponawondering@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/estepona/douban.fm-electron.git"
  },
  "homepage": "https://github.com/estepona/douban.fm-electron#readme",
  "license": "ISC",
  "main": "./tsout/app.js",
  "scripts": {
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "start": "npm run build && npx electron ./tsout/app.js",
    "pack": "npx electron-builder -mwl",
    "package-win32": "npx electron-packager . --platform=win32 --out=out",
    "package-mac": "npx electron-packager . --platform=darwin --out=out",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.electron.doubanfm",
    "productName": "douban.fm",
    "copyright": "Copyright Â© 2019- ${author}",
    "directories": {
      "buildResources": "build",
      "output": "dist",
      "app": "."
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "dmg"
    }
  },
  "bugs": {
    "url": "https://github.com/estepona/douban.fm-electron/issues"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.0.0",
    "lodash": "^4.17.15",
    "mousetrap": "^1.6.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.14.136",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "@types/mousetrap": "^1.6.3",
    "electron": "^5.0.7",
    "electron-builder": "^22.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  }
}
